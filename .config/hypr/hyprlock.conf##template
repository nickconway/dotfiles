source = ~/.cache/wal/colors-hyprland.conf

background {
    monitor =
    path = $WALLPAPER
    color = rgba(25, 20, 20, 0.9)
    blur_passes = 4 # 0 disables blurring
    blur_size = 8
}

general {
    grace = 0
    disable_loading_bar = true
}

input-field {
    monitor =
    size = 250, 60
    outline_thickness = 2
    dots_size = 0.2 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.2 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    outer_color = rgba(0, 0, 0, 0)
    inner_color = $backgroundAlpha
    font_color = $foreground
    fade_on_empty = false
    font_family = NotoSans
    placeholder_text = <i><span foreground="##cccccc">Input Password...</span></i>
    hide_input = false
    position = 0, -120
    halign = center
    valign = center
}

# Time
label {
    monitor =
    text = cmd[update:1000] echo "$(date +"%-I:%M%p")"
    color = rgba(255, 255, 255, 0.6)
{% if yadm.hostname == "desktop" %}
    font_size = 75
{% endif %}
{% if yadm.hostname == "laptop" %}
    font_size = 120
{% endif %}
    font_family = JetBrains Mono Nerd Font ExtraBold
    position = 0, -300
    halign = center
    valign = top
}

