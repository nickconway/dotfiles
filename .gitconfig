[user]
    name = Nick Conway
    email = nick@conway.dev
[init]
    defaultBranch = main
[merge]
    tool = "nvim"
    conflictstyle = diff3
[mergetool]
    keepBackup = false
    prompt = false
[mergetool "nvim"]
    cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
[pull]
    rebase = true
[fetch]
    prune = true
[diff]
    colorMoved = default
[rebase]
    autoStash = true
    autoSquash = true
[push]
    default = simple
    autoSetupRemote = true
[rerere]
    enabled = true
[commit]
    gpgsign = true
[include]
    path = ~/.gitconfig.local
[core]
    editor = nvim -c startinsert
    pager = delta
[interactive]
    diffFilter = delta --color-only
[include]
    path = ~/.config/delta/themes.gitconfig
[delta]
    features = collared-trogon
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
