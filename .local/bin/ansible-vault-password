#!/usr/bin/env bash
set -euo pipefail

if [[ -n "${LOG:-}" ]]; then
    exec &>"/tmp/$(basename "$0").log"
    set -x
fi

if [[ -n "${DEBUG_MODE:-}" ]]; then
    set -x
fi

command -v pass &>/dev/null

if command -v termux-reload-settings >/dev/null; then
    pass ansible/"$TERMUX_USER"
else
    pass ansible/"$USER"
fi
