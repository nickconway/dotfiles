#!/usr/bin/env bash
set -euo pipefail

function clean() {
    if [[ -e ~/Git/zmk-config/config/include/leader.dtsi.bkp ]]; then
        mv ~/Git/zmk-config/config/include/leader.dtsi{.bkp,}
    fi

    if [[ -e ~/Git/zmk-config/config/include/macros.dtsi.bkp ]]; then
        mv ~/Git/zmk-config/config/include/macros.dtsi{.bkp,}
    fi

    [[ -e ~/Git/zmk/app/.clangd ]] && rm ~/Git/zmk/app/.clangd
}

trap clean ERR EXIT

flash=false
update_flag=false
enable_logging=false

og_args=$*

while getopts 'flps:u' flag; do
    case "${flag}" in
    f) flash=true ;;
    l) enable_logging=true ;;
    u) update_flag=true ;;
    *) continue ;;
    esac
done
shift $((OPTIND - 1))

if [[ -e ~/Git/zmk-config/config/include/leader.dtsi ]]; then
    cp ~/Git/zmk-config/config/include/macros.dtsi{,.bkp}
    cp ~/Git/zmk-config/config/include/leader.dtsi{,.bkp}

    cat ~/.config/zmk/macros.dtsi >>~/Git/zmk-config/config/include/macros.dtsi

    (
        n=0
        while read line; do
            if [[ "$line" == '};' && $n = 0 ]]; then
                cat ~/.config/zmk/leader.dtsi
                n=1
            fi
            echo "$line"
        done <~/Git/zmk-config/config/include/leader.dtsi
    ) >~/Git/zmk-config/config/include/leader.dtsi.new

    mv ~/Git/zmk-config/config/include/leader.dtsi{.new,}
fi

function zmkrun() {
    docker run \
        -v ~/Git/zmk:/workspace \
        -v ~/Git/zmk-config:/workspace/zmk-config \
        -v ~/Git/zmk/zephyr:/workspace/zephyr \
        -v ~/Git/zmk/modules:/workspace/modules \
        -v ~/Git/zmk/tools:/workspace/tools \
        -v ~/Git/zmk/app/build:/workspace/app/build \
        -w /workspace/app \
        --rm \
        zmk "$@"
}

if ! docker image inspect zmk &>/dev/null; then
    docker build -t zmk ~/Git/zmk/.devcontainer
fi

if [[ ! -e ~/Git/zmk/.west ]]; then
    zmkrun bash -c "west init -l ."
    zmkrun bash -c "west update"
elif [[ $update_flag == true ]]; then
    zmkrun bash -c "west update"
fi

cat <<EOF >~/Git/zmk/app/.clangd
CompileFlags:
  Add: -Wno-unknown-warning-option
  Remove: [-m*, -f*]
EOF

FLAGS=""
if [[ $enable_logging == true ]]; then
    FLAGS="-S zmk-usb-logging"
fi

OLD_BASE="$1"

BASE="$OLD_BASE"
BASE="${BASE%_left}"
BASE="${BASE%_right}"

IS_SPLIT=false
if [[ $(find ~/Git/zmk{,-config} -name ${BASE}_left.conf | wc -l) -gt 0 ]]; then
    IS_SPLIT=true
fi

if [[ "$IS_SPLIT" == true ]]; then
    if [[ "$OLD_BASE" == "$BASE" ]] || [[ "$OLD_BASE" == *"_left" ]]; then
        if [ "${2:-}" = "nv" ]; then
            zmkrun west config build.cmake-args -- "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=\"${BASE}_left nice_view_adapter nice_view\""
            zmkrun west build $FLAGS -d build/$BASE/left -b nice_nano_v2 -- -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD="${BASE}_left nice_view_adapter nice_view"

        else
            zmkrun west config build.cmake-args -- "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=${BASE}_left"
            zmkrun west build $FLAGS -d build/$BASE/left -b nice_nano_v2 -- -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=${BASE}_left
        fi
    fi

    if [[ "$OLD_BASE" == "$BASE" ]] || [[ "$OLD_BASE" == *"_right" ]]; then
        if [ "${2:-}" = "nv" ]; then
            zmkrun west config build.cmake-args -- "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=\"${BASE}_right nice_view_adapter nice_view\""
            zmkrun west build $FLAGS -d build/$BASE/right -b nice_nano_v2 -- -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD="${BASE}_right nice_view_adapter nice_view"
        else
            zmkrun west config build.cmake-args -- "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=${BASE}_right"
            zmkrun west build $FLAGS -d build/$BASE/right -b nice_nano_v2 -- -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=${BASE}_right
        fi
    fi
else
    if [ "${2:-}" = "nv" ]; then
        zmkrun west config build.cmake-args -- "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=${BASE} nice_view_adapter nice_view"
        zmkrun west build $FLAGS -d build/$BASE -b nice_nano_v2 -- -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD="${BASE} nice_view_adapter nice_view"
    else
        zmkrun west config build.cmake-args -- "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=${BASE}"
        zmkrun west build $FLAGS -d build/$BASE -b nice_nano_v2 -- -DZMK_CONFIG=/workspace/zmk-config/config -DSHIELD=${BASE}
    fi
fi

if [[ $flash == true ]]; then
    flash-zmk $og_args
fi
