#!/usr/bin/env bash

if [[ ! -e ~/.cache/emojis || "$1" == "download" ]]; then
    echo "Downloading emojis..."
    curl -s https://raw.githubusercontent.com/muan/emojilib/main/dist/emoji-en-US.json \
      | jq --raw-output '. | to_entries | .[] | .key + " " + (.value | join(" ") | sub("_"; " "; "g"))' \
      > ~/.cache/emojis
fi

cat ~/.cache/emojis | rofi -display-columns 1 -display-column-separator ' ' -dmenu -p ó°ž… -config ~/.config/rofi/styles/style_2.rasi --placeholder-text='...' -i -theme-str 'listview { columns: 6; } mode-switcher { enabled: false; } element-text { font: "NotoSans Nerd Font Propo 20"; }' | cut -d ' ' -f 1 | tr -d '\n' | wl-copy && paste-keys
