#!/usr/bin/env bash
set -euo pipefail

EMUDECK_DIR="$(jq -r '.storagePath' .config/EmuDeck/settings.json)/Emulation"

function pull-saves() {
    echo "Pulling Saves"
    rsync -Lauvz --progress --info=progress2 /mnt/nas/home/Documents/Emulation/Saves/ "$EMUDECK_DIR/saves"
}
function push-saves() {
    echo "Pushing Saves"
    rsync -Lauvz --progress --info=progress2 "$EMUDECK_DIR/saves/" /mnt/nas/home/Documents/Emulation/Saves
}

function sync-saves() {
    pull-saves
    echo
    push-saves
}

function pull-games() {
    echo "Pulling Games"
    rsync -Lauvz --progress --info=progress2 /mnt/nas/home/Documents/Emulation/Games/ "$EMUDECK_DIR/roms"
}

function push-games() {
    echo "Pushing Games"
    rsync -Lauvz --progress --info=progress2 "$EMUDECK_DIR/roms/" /mnt/nas/home/Documents/Emulation/Games
}

function sync-games() {
    pull-games
    echo
    push-games
}

function pull-bios() {
    echo "Pulling BIOS"
    rsync -Lauvz --progress --info=progress2 /mnt/nas/home/Documents/Emulation/BIOS/ "$EMUDECK_DIR/bios"
}

function push-bios() {
    echo "Pushing BIOS"
    rsync -Lauvz --progress --info=progress2 "$EMUDECK_DIR/bios/" /mnt/nas/home/Documents/Emulation/BIOS
}

function sync-bios() {
    pull-bios
    echo
    push-bios
}

if [[ $# == 0 ]]; then
    sync-games
    echo
    sync-saves
    echo
    sync-bios
elif [[ $# -eq 1 && "${1:-}" == "pull" ]]; then
    pull-games
    echo
    pull-saves
    echo
    pull-bios
elif [[ $# -eq 1 && "${1:-}" == "push" ]]; then
    push-games
    echo
    push-saves
    echo
    push-bios
else
    if [[ "${1:-}" == "pull" ]]; then
        for arg in "${@:2}"; do
            pull-"$arg"
            echo
        done
    elif [[ "${1:-}" == "push" ]]; then
        for arg in "${@:2}"; do
            push-"$arg"
            echo
        done
    else
        for arg in "$@"; do
            sync-"$arg"
            echo
        done
    fi
fi
