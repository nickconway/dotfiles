#!/usr/bin/env bash
set -euo pipefail

function clean() {
    if [[ -e tmp ]]; then
        sudo umount tmp
        rmdir tmp
    fi
}
trap clean ERR EXIT

enable_logging=false

while getopts 'flps:u' flag; do
    case "${flag}" in
    l) enable_logging=true ;;
    p) passthrough=true ;;
    s) log_search="$OPTARG" ;;
    *) continue ;;
    esac
done
shift $((OPTIND - 1))

mkdir -p tmp

if [ $(find ~/Git/zmk -name $1_left.conf | wc -l) -gt 0 ] || [ $(find ~/Git/zmk-config -name $1_left.conf | wc -l) -gt 0 ]; then
    echo "Set right keyboard to flashing mode..."
    while [[ ! -e /dev/disk/by-label/NICENANO ]]; do
        true
    done
    echo "Flashing..."
    sudo mount /dev/disk/by-label/NICENANO tmp
    sudo cp "$1_right.uf2" tmp
    while [[ -e /dev/disk/by-label/NICENANO ]]; do
        true
    done
    echo "Flashing complete"

    clean
    mkdir -p tmp

    echo "Set left keyboard to flashing mode..."
    while [[ ! -e /dev/disk/by-label/NICENANO ]]; do
        true
    done
    echo "Flashing..."
    sudo mount /dev/disk/by-label/NICENANO tmp
    sudo cp "$1_left.uf2" tmp
    while [[ -e /dev/disk/by-label/NICENANO ]]; do
        true
    done
    echo "Flashing complete"

    clean
else
    echo "Set keyboard to flashing mode..."
    while [[ ! -e /dev/disk/by-label/NICENANO ]]; do
        true
    done
    echo "Flashing..."
    sudo mount /dev/disk/by-label/NICENANO tmp
    sudo cp "$1.uf2" tmp
    while [[ -e /dev/disk/by-label/NICENANO ]]; do
        true
    done
    echo "Flashing complete"

    clean
fi

if [[ $enable_logging == true ]]; then
    LOG_FLAGS=""

    if [[ -n "$log_search" ]]; then
        LOG_FLAGS+=" -s $log_search"
    fi

    if [[ ${passthrough:-} == true ]]; then
        LOG_FLAGS+=" -p"
    fi

    log-zmk $LOG_FLAGS
fi
