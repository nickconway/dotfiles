#!/usr/bin/env bash
set -euo pipefail

if [[ -n "${LOG:-}" ]]; then
    exec &>"/tmp/$(basename "$0").log"
    set -x
fi

if [[ -n "${DEBUG_MODE:-}" ]]; then
    set -x
fi

if [[ $# -gt 0 ]]; then
    SELECTED=$@
else
    SSH_HOSTS=$(grep "Host " ~/.ssh/config | awk '{print $2}' || echo '')
    KNOWN_HOSTS=$(cat ~/.ssh/known_hosts | awk '{print $1}' || echo '')
    TAILSCALE_HOSTS="$(command -v tailscale >/dev/null && tailscale status | grep -v '^#' | awk '{print $2}' || echo '')"
    TAILSCALE_WSL_HOSTS="$(command -v tailscale.exe >/dev/null && tailscale.exe status | grep -v '^#' | awk '{print $2}' || echo '')"
    SELECTED=$( (
        echo "$SSH_HOSTS"
        echo "$KNOWN_HOSTS"
        echo "$TAILSCALE_HOSTS"
        echo "$TAILSCALE_WSL_HOSTS"
    ) | sort | uniq | awk NF | fzft --prompt="î¯ˆ > " --border-label ' SSH ')
fi

if [[ -z $SELECTED ]]; then
    exit 1
fi

if [[ -n $TMUX ]]; then
    PANE_PID="$(tmux display -p '#{pane_pid}')"
    S_FILE="${PREFIX:-}/tmp/tmux-$PANE_PID"
    (
        &>/dev/null hide-tmux-statusbar $PANE_PID &
        echo -n $! >"$S_FILE"
    )
    tmux set prefix C-h
    tmux bind C-h send-prefix
fi

if command -v ss &>/dev/null; then
    PORT=
    ports=('5556' '5557' '5558' '5559' '5560')
    for p in "${ports[@]}"; do
        if [[ "$(ss -n -4 state listening "( sport = $p )" 2>/dev/null | tail -n +2 | wc -l)" -eq 0 ]]; then
            PORT=$p
            break
        fi
    done

    if [[ -n ${TMUX:-} ]] && [[ -n $PORT ]]; then
        (
            while true; do
                (nc -l -p "$PORT" | wl-copy) || true
            done &

            echo -n $! >"$S_FILE"
        )
    fi

    if [[ -n $PORT ]]; then
        ssh -R $PORT:localhost:$PORT $SELECTED || true
    else
        ssh $SELECTED || true
    fi
else
    ssh $SELECTED || true
fi

if [[ -n $TMUX ]]; then
    if ps -p $(cat "$S_FILE") &>/dev/null; then
        kill $(cat "$S_FILE")
    fi
fi

if [[ -n $PORT ]] && pgrep "nc -l -p $PORT" -f &>/dev/null; then
    kill $(pgrep "nc -l -p $PORT" -f)
fi

if [[ -n $TMUX ]]; then
    tmux set status on
    tmux bind C-Space send-prefix
    tmux set prefix C-Space
    rm "$S_FILE"
fi
