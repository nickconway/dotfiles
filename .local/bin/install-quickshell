#!/usr/bin/env bash
set -euo pipefail

if [[ -n "${DEBUG_MODE:-}" ]]; then
    set -x
fi

mkdir -p ~/Git

cd ~/Git
git clone https://github.com/nickconway/quickshell || true
cd quickshell
cmake -GNinja -B build -DCMAKE_BUILD_TYPE=Release -DCRASH_REPORTER=OFF
cmake --build build
sudo cmake --install build

cd ~/Git
git clone https://github.com/nickconway/caelestia-cli caelestia-cli || true
cd caelestia-cli
git pull
if [[ -e /usr/bin/caelestia ]]; then
    sudo rm /usr/bin/caelestia
    sudo pip uninstall caelestia --break-system-packages --yes --root-user-action ignore
    rm -rf dist
fi
python -m build --wheel
sudo python -m installer dist/*.whl
sudo cp completions/caelestia.fish /usr/share/fish/vendor_completions.d/caelestia.fish

mkdir -p ~/.config/quickshell
cd ~/.config/quickshell
git clone https://github.com/nickconway/caelestia.git caelestia || true
cd caelestia
git pull
git remote add upstream https://github.com/caelestia-dots/shell || true
git fetch upstream --tags
cmake -B build -G Ninja -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/
cmake --build build
sudo cmake --install build

cd ~/.config/quickshell
git clone https://github.com/noctalia-dev/noctalia-shell noctalia || true
cd noctalia
git pull

for q in $(basename "$(dirname "$(qs list --all | grep Config | cut -d ':' -f 2)")" | xargs); do
    qs -c $q kill &>/dev/null
    qs -c $q -d &>/dev/null
done
