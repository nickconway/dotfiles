#!/usr/bin/env bash
set -euo pipefail

if [[ -n "${DEBUG_MODE:-}" ]]; then
	set -x
fi

export GUM_INPUT_HEADER_FOREGROUND=${GUM_INPUT_HEADER_FOREGROUND:-9}
export GUM_INPUT_CURSOR_FOREGROUND=${GUM_INPUT_CURSOR_FOREGROUND:-11}

if [[ -n "${DEBUG_MODE:-}" ]]; then
    set -x
    export DEBUG_MODE
fi

if command -v envsubst-better &>/dev/null; then
    ENV_CMD=envsubst-better
else
    ENV_CMD=envsubst
fi

function apply() {
    cd "$1" || return
    echo "$1"

    get-vars env
    source .env

    if [[ -e setup ]]; then
        ./setup
    fi

    for f in *.yml; do
        kubectl apply -f <("$ENV_CMD" <"$f")
    done
}

K8S_MANIFEST_DIR=${K8S_MANIFEST_DIR:-~/Kubernetes}
cd "$K8S_MANIFEST_DIR"

CMD="$1"
shift

TARGETS=(*)

for T in "${TARGETS[@]}"; do
    if [[ $# -eq 0 ]] || [[ "$*" == *"$T"* ]]; then
        ("$CMD" "$T")
    fi
done
