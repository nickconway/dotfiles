#!/usr/bin/env bash
set -euo pipefail

if [[ -n "${LOG:-}" ]]; then
    exec &>"/tmp/$(basename "$0").log"
    set -x
fi

if [[ -n "${DEBUG_MODE:-}" ]]; then
    set -x
fi

if pgrep -afx "qs -c caelestia.*" &>/dev/null; then
    qs -c caelestia ipc call drawers toggle session
elif pgrep -afx "qs -c noctalia.*" &>/dev/null; then
    qs -c noctalia ipc call sessionMenu toggle
elif pgrep -afx "qs -c dms.*" &>/dev/null; then
    qs -c dms ipc call powermenu toggle
else
    ~/.config/rofi/scripts/power-menu
fi
