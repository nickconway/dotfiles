#!/usr/bin/env bash
set -euo pipefail

if [[ $1 == "do" ]]; then
    pidof hyprlock && touch /tmp/.sunshine-locked && pkill -USR1 hyprlock
    swaync-client -dn
    sunshine-headless enable
elif [[ $1 == "undo" ]]; then
    sunshine-headless disable
    swaync-client -df
    [[ -e /tmp/.sunshine-locked ]] && rm /tmp/.sunshine-locked && hyprlock
fi
