#!/usr/bin/env bash
set -eou pipefail

if pgrep -f "qs -c caelestia"; then
    caelestia shell notifs toggleDnd
elif pgrep -x "swaync"; then
    swaync-client -d
    if [[ $(swaync-client -D) == "false" ]]; then
        notify-send "Do Not Disturb" "Do not disturb is now off" -h string:notification-name:dnd -e
    fi
fi
