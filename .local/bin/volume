#!/usr/bin/env bash
set -euo pipefail

if [[ -n "${DEBUG_MODE:-}" ]]; then
	set -x
fi

case ${1:-} in
show)
    notify-send "Current volume: $(pamixer --get-volume)%" -h string:synchronous:audio -h int:value:$(pamixer --get-volume) -e
    ;;

raise)
    pamixer -u
    pamixer -i ${2:-1}
    ;;

lower)
    pamixer -u
    pamixer -d ${2:-1}
    ;;

mute)
    pamixer -t
    ;;
esac
