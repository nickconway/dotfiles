#!/usr/bin/env bash
set -euo pipefail

if [[ -n "${LOG:-}" ]]; then
    exec &>"/tmp/$(basename "$0").log"
    set -x
fi

if [[ -n "${DEBUG_MODE:-}" ]]; then
    set -x
fi

for CLASS in "$@"; do
    if [[ ! -e ~/.config/yadm/alt/.$CLASS##c.$CLASS ]]; then
        touch ~/.config/yadm/alt/.$CLASS##c.$CLASS
        yadm add ~/.config/yadm/alt/.$CLASS##c.$CLASS
    fi
done
